<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game2">

    <Button
        android:id="@+id/tbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="40dp"
        android:background="#55B1FD"
        android:onClick="giveup"
        android:text="放棄"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/tt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ttxv4"
        app:srcCompat="@drawable/background2_2" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="195dp"
        android:layout_height="136dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat8" />

    <ImageView
        android:id="@+id/i9"
        android:layout_width="187dp"
        android:layout_height="164dp"
        android:layout_marginBottom="112dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cat1" />

    <ImageView
        android:id="@+id/i8"
        android:layout_width="150dp"
        android:layout_height="198dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="144dp"
        app:layout_constraintStart_toStartOf="@+id/tt3"
        app:layout_constraintTop_toBottomOf="@+id/ttxv4"
        app:srcCompat="@drawable/cat7" />

    <ImageView
        android:id="@+id/i7"
        android:layout_width="199dp"
        android:layout_height="187dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="196dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat5" />

    <ImageView
        android:id="@+id/i6"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttxv4"
        app:srcCompat="@drawable/cat6" />

    <ImageView
        android:id="@+id/i5"
        android:layout_width="221dp"
        android:layout_height="149dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cat3" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="246dp"
        android:layout_height="172dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cat9" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="149dp"
        android:layout_height="240dp"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cat2" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="181dp"
        android:layout_height="210dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cat4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二關"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/ttxv4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ttxv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="達達在爬好漢坡時遇到好多隻貓，請找出眼睛最大的貓"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

</androidx.constraintlayout.widget.ConstraintLayout>